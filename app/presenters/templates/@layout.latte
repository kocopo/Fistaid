<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="{$basePath}/css/bootstrap.min.css" rel="stylesheet" media="screen">
	<link href="{$basePath}/css/lightbox.css" rel="stylesheet">
	<script src="{$basePath}/js/jquery-3.3.1.js"></script>
	<script src="{$basePath}/js/bootstrap.min.js"></script>

	<link href="{$basePath}/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="{$basePath}/css/blog-home.css" rel="stylesheet">
	<title>{ifset title}{include title|stripHtml} | {/ifset}Fist Aid</title>
<style>
	body{
		background-color: #1b1e21};
	}
</style>
</head>

<body>

{include '_includes/header.latte'}
<div class="container-fluid">
    <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type} alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {$flash->message}
    </div>
	<div id="myModal" class="modal">

		<img class="modal-content" id="img01">
		<div id="caption"></div>
		<span class="close">&times;</span>
	</div>
</div>
		<!-- Page Content -->
		<div class="container">
			<div class="row">
				{ifset title}
					<div class="col-md-12">
						{include contentTitle}
					</div>
				{/ifset}
				<!-- Blog Entries Column -->
				<div class="col-md-9">
					{include content}
				</div>
				<div class="col-md-3">
					{include side}
				</div>
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->

{include '_includes/footer.latte'}
{block scripts}
	<script src="{$basePath}/js/lightbox.js"></script>
	<script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
{/block}
</body>
</html>
